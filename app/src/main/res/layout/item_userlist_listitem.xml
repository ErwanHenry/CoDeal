<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/photoUser"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/erwan"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:id="@+id/namesLinearLayout"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_toRightOf="@+id/photoUser"
        android:layout_centerVertical="true" >

        <TextView
            android:id="@+id/firstNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/first_name"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/lastNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/last_name"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/infosLinearLayout"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_toRightOf="@+id/namesLinearLayout"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:paddingRight="16dp"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/villeTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/ville"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/emailTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/email"
            android:textSize="14sp" />
    </LinearLayout>

</RelativeLayout>